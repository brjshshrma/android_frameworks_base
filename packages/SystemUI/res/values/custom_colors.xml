<resources>
    <!-- Floating action button -->
    <color name="fab_color">@*android:color/material_deep_teal_500</color>
    <color name="floating_action_button_icon_color">#ffffff</color>
    <!-- Navbar icon Colors -->
    <color name="icon_color_back">@android:color/white</color>
    <color name="icon_color_ime_switcher">@android:color/white</color>
    <color name="icon_color_split_screen">@android:color/white</color>
    <color name="icon_color_home">@android:color/white</color>
    <color name="icon_color_overview">@android:color/white</color>
    <color name="icon_color_back_dark">@android:color/black</color>
    <color name="icon_color_ime_switcher_dark">@android:color/black</color>
    <color name="icon_color_split_screen_dark">@android:color/black</color>
    <color name="icon_color_home_dark">@android:color/black</color>
    <color name="icon_color_overview_dark">@android:color/black</color>
   
    <!-- QS tiles Active and Inactive tint (Requires config_enable_qs_tile_tinting bool set to true) -->
    <color name="qs_tiles_active_tint">@*android:color/accent_device_default_light</color>
    <color name="qs_tiles_inactive_tint">@*android:color/hint_foreground_material_light</color>
    
    <!-- QS tiles expand, underline and label colors -->    
    <color name="qs_tiles_expand_tint">@*android:color/text_color_primary</color>
    <color name="qs_tiles_label_color">@*android:color/text_color_primary</color>
    <color name="qs_tiles_underline_color">@*android:color/foreground_material_light</color>

</resources>
